							"script": {
								"type": "text/javascript",
								"exec": [
									"// Validação de status code para exclusão bem-sucedida ou regra de negócio",
									"pm.test(\"Status code é 200 ou 400 - Cenários válidos\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 400]);",
									"});",
									"",
									"// Validação da mensagem de sucesso para 200",
									"if (pm.response.code === 200) {",
									"    pm.test(\"Mensagem de sucesso para exclusão está presente\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData.message).to.be.oneOf([\"Registro excluído com sucesso\", \"Nenhum registro excluído\"]);",
									"    });",
									"    ",
									"    // Limpar variável userId após exclusão bem-sucedida",
									"    if (pm.response.json().message === \"Registro excluído com sucesso\") {",
									"        pm.test(\"Limpar variável userId após exclusão\", function () {",
									"            pm.collectionVariables.unset(\"userId\");",
									"        });",
									"    }",
									"}",
									"",
									"// Validação de erro 400 - Usuário com carrinho ou não encontrado",
									"if (pm.response.code === 400) {",
									"    pm.test(\"Mensagem de erro para regra de negócio\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData.message).to.be.oneOf([",
									"            \"Não é permitido excluir usuário com carrinho cadastrado\",",
									"            \"Nenhum registro excluído\"",
									"        ]);",
									"    });",
									"}",
									"",
									"// Validação de erro 401 - Não autorizado",
									"if (pm.response.code === 401) {",
									"    pm.test(\"Status code é 401 - Token inválido ou ausente\", function () {",
									"        pm.response.to.have.status(401);",
									"    });",
									"    ",
									"    pm.test(\"Mensagem de erro de autenticação\", function () {",
									"        var jsonData = pm.response.json();",
									"        pm.expect(jsonData.message).to.include(\"Token\");",
									"    });",
									"}",
									"",
									"// Validação de erro 403 - Sem permissão",
